<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.crimson30.cardczar.GameOverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameOverText"
        android:layout_alignParentTop="false"
        android:text="..................."
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#050001" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        android:id="@+id/restartButton"
        android:onClick="intentToRestartStart"
        android:layout_below="@+id/gameOverText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/gameOverText"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="224dp"
            android:layout_height="466dp"
            android:layout_row="6"
            android:layout_column="13"
            android:id="@+id/crownLayout"
            android:layout_below="@+id/gameOverText"
            android:layout_alignEnd="@+id/gridLayout"
            android:layout_alignStart="@+id/restartButton"
            android:layout_rowSpan="2">

        </LinearLayout>
    </GridLayout>


</RelativeLayout>
