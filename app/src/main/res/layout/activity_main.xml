<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/parentLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joinButtonText"
        android:onClick="intentToUserStart"
        android:id="@+id/joinButton"
        android:layout_below="@+id/hostButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hostButtonText"
        android:onClick="intentToHostStart"
        android:id="@+id/hostButton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/joinButton"
        android:layout_marginTop="52dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/joinButton">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="264dp"
            android:layout_height="246dp"
            android:layout_row="8"
            android:layout_column="7"
            android:id="@+id/coatLayout"
            android:gravity="center_vertical|center|center_horizontal"></LinearLayout>
    </GridLayout>

</RelativeLayout>
